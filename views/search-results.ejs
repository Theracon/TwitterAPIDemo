        <div class="container">
            <ol style="background-color: #eee; width: 100%; height: fit-content; padding: 3rem; margin-top: 2rem;">
                <% data.forEach(result => { %>
                    <li><p class="lead lh-1"><%= result.text %> </p></li>
                <% }) %> 
            </ol>

            <a href="/" class="btn btn-outline-primary btn-lg">Search again</a>
        </div>
    </body>
</html>